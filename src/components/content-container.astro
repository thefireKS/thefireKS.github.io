---
interface Props {
  heading?: string;
}

const { heading = "Heading" } = Astro.props;
---

<section
  class="bg-surface-hover rounded-lg space-y-2 border-2 border-highlight"
  transition:name="content-container"
>
  <h1 class="bg-surface font-heading text-xl font-bold px-4 py-2">
    <span class="gradient-text">{heading}</span>
  </h1>
  <div class="p-4">
    <slot />
  </div>
</section>
